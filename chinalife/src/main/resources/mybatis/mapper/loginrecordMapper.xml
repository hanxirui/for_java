<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinal.emp.dao.LoginrecordDao">
    <resultMap id="queryResultMap" type="com.chinal.emp.entity.Loginrecord">
                <result column="id" property="id" jdbcType="INTEGER" />
                <result column="account" property="account" jdbcType="VARCHAR" />
                <result column="ip" property="ip" jdbcType="VARCHAR" />
                <result column="date" property="date" jdbcType="TIMESTAMP" />
            </resultMap>

    <select id="find" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultMap="queryResultMap">
		SELECT 
                         id
                , account
                , ip
                , date
        		FROM loginrecord t
		<include refid="expressionBlock.where" />
		<choose>
			<when test="sortname == null">
				ORDER BY t.id desc
			</when>
			<otherwise>
				ORDER BY ${order}
			</otherwise>
		</choose>
		<if test="!isQueryAll">
			LIMIT
			#{start,jdbcType=INTEGER},#{limit,jdbcType=INTEGER}
		</if>
	</select>


    <select id="findTotalCount" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultType="java.lang.Integer">
		SELECT count(*) FROM loginrecord t
		<include refid="expressionBlock.where" />
    </select>

    <insert id="save" parameterType="com.chinal.emp.entity.Loginrecord"
    >
	INSERT INTO loginrecord
         (
                              `id`
                                        , `account`
                                        , `ip`
                                        , `date`
                              )
	VALUES (
                              #{id,jdbcType=INTEGER}
                                        , #{account,jdbcType=VARCHAR}
                                        , #{ip,jdbcType=VARCHAR}
                                        , #{date,jdbcType=TIMESTAMP}
                     
        )
	</insert>


    <update id="update" parameterType="com.chinal.emp.entity.Loginrecord">
    UPDATE loginrecord
    SET 
                                                 account=#{account,jdbcType=VARCHAR}
                                     , ip=#{ip,jdbcType=VARCHAR}
                                     , date=#{date,jdbcType=TIMESTAMP}
                     WHERE id = #{id,jdbcType=INTEGER}
    </update>

    <select id="get" resultMap="queryResultMap" parameterType="com.chinal.emp.entity.Loginrecord">
		SELECT 
                         id
                , account
                , ip
                , date
        		FROM loginrecord t
		WHERE id = #{id,jdbcType=INTEGER}
	</select>
	
	<delete id="del" parameterType="com.chinal.emp.entity.Loginrecord">
		DELETE FROM loginrecord
		WHERE id = #{id,jdbcType=INTEGER}
	</delete>

</mapper>
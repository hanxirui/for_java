<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinal.emp.dao.BizplatformDao">
    <resultMap id="queryResultMap" type="com.chinal.emp.entity.Bizplatform">
                <result column="id" property="id" jdbcType="INTEGER" />
                <result column="title" property="title" jdbcType="VARCHAR" />
                <result column="url" property="url" jdbcType="VARCHAR" />
                <result column="clazz" property="clazz" jdbcType="VARCHAR" />
                <result column="start" property="start" jdbcType="INTEGER" />
                <result column="end" property="end" jdbcType="INTEGER" />
            </resultMap>

    <select id="find" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultMap="queryResultMap">
		SELECT 
                         t.id
                , t.title
                , t.url
                , t.clazz
                , t.start
                , t.end
        		FROM bizplatform t
		<include refid="expressionBlock.where" />
		<choose>
			<when test="sortname == null">
				ORDER BY t.id desc
			</when>
			<otherwise>
				ORDER BY ${order}
			</otherwise>
		</choose>
		<if test="!isQueryAll">
			LIMIT
			#{start,jdbcType=INTEGER},#{limit,jdbcType=INTEGER}
		</if>
	</select>


    <select id="findTotalCount" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultType="java.lang.Integer">
		SELECT count(*) FROM bizplatform t
		<include refid="expressionBlock.where" />
    </select>

    <insert id="save" parameterType="com.chinal.emp.entity.Bizplatform"
    >
	INSERT INTO bizplatform
         (
                              `id`
                                        , `title`
                                        , `url`
                                        , `clazz`
                                        , `start`
                                        , `end`
                              )
	VALUES (
                              #{id,jdbcType=INTEGER}
                                        , #{title,jdbcType=VARCHAR}
                                        , #{url,jdbcType=VARCHAR}
                                        , #{clazz,jdbcType=VARCHAR}
                                        , #{start,jdbcType=INTEGER}
                                        , #{end,jdbcType=INTEGER}
                     
        )
	</insert>


    <update id="update" parameterType="com.chinal.emp.entity.Bizplatform">
    UPDATE bizplatform
    SET 
                                                     
        <if test="title!=null and title!=''">
         title=#{title,jdbcType=VARCHAR}
        </if>
                                      
        <if test="url!=null and url!=''">
        ,
         url=#{url,jdbcType=VARCHAR}
        </if>
                                      
        <if test="clazz!=null and clazz!=''">
        ,
         clazz=#{clazz,jdbcType=VARCHAR}
        </if>
                                      
        <if test="start!=null and start!=''">
        ,
         start=#{start,jdbcType=INTEGER}
        </if>
                                      
        <if test="end!=null and end!=''">
        ,
         end=#{end,jdbcType=INTEGER}
        </if>
                      WHERE id = #{id,jdbcType=INTEGER}
    </update>

    <select id="get" resultMap="queryResultMap" parameterType="com.chinal.emp.entity.Bizplatform">
		SELECT 
                         id
                , title
                , url
                , clazz
                , start
                , end
        		FROM bizplatform t
		WHERE id = #{id,jdbcType=INTEGER}
	</select>
	
	<delete id="del" parameterType="com.chinal.emp.entity.Bizplatform">
		DELETE FROM bizplatform
		WHERE id = #{id,jdbcType=INTEGER}
	</delete>

</mapper>
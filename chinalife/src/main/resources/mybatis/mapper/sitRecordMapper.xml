<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinal.emp.dao.SitRecordDao">
    <resultMap id="queryResultMap" type="com.chinal.emp.entity.SitRecord">
                <result column="id" property="id" jdbcType="INTEGER" />
                <result column="empcode" property="empcode" jdbcType="VARCHAR" />
                <result column="empname" property="empname" jdbcType="VARCHAR" />
                <result column="visittime" property="visittime" jdbcType="VARCHAR" />
                <result column="idcardnum" property="idcardnum" jdbcType="VARCHAR" />
                <result column="content" property="content" jdbcType="VARCHAR" />
                <result column="name" property="name" jdbcType="VARCHAR" />
                <result column="type" property="type" jdbcType="VARCHAR" />
                <result column="xijie" property="xijie" jdbcType="VARCHAR" />
            </resultMap>

    <select id="find" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultMap="queryResultMap">
		SELECT 
                         t.id
                , t.empcode
                , t.visittime
                , t.idcardnum
                , t.content
                , t.name
                , t.type
                , t.xijie
                , t2.name as empname
        		FROM visit_record t
        		left join employee t2 on t.empcode=t2.code
		<include refid="expressionBlock.where" />
		<choose>
			<when test="sortname == null">
				ORDER BY t.id desc
			</when>
			<otherwise>
				ORDER BY ${order}
			</otherwise>
		</choose>
		<if test="!isQueryAll">
			LIMIT
			#{start,jdbcType=INTEGER},#{limit,jdbcType=INTEGER}
		</if>
	</select>


    <select id="findTotalCount" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultType="java.lang.Integer">
		SELECT count(*) FROM visit_record t
		<include refid="expressionBlock.where" />
    </select>
    
    <select id="findVisitCount" parameterType="org.durcframework.core.expression.ExpressionQuery"
		resultType="java.lang.Integer">
		SELECT count(distinct t.idcardnum) FROM visit_record t
		<include refid="expressionBlock.where" />
    </select>

    <insert id="save" parameterType="com.chinal.emp.entity.SitRecord"
    keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
	INSERT INTO visit_record
         (
                                                  `empcode`
                                        , `visittime`
                                        , `idcardnum`
                                        , `content`
                                        , `name`
                                        , `type`
                                        , `xijie`
                              )
	VALUES (
                                                  #{empcode,jdbcType=VARCHAR}
                                        , #{visittime,jdbcType=VARCHAR}
                                        , #{idcardnum,jdbcType=VARCHAR}
                                        , #{content,jdbcType=VARCHAR}
                                        , #{name,jdbcType=VARCHAR}
                                        , #{type,jdbcType=VARCHAR}
                                        , #{xijie,jdbcType=VARCHAR}
                     
        )
	</insert>


    <update id="update" parameterType="com.chinal.emp.entity.SitRecord">
    UPDATE visit_record
    SET 
                                                     
        <if test="empcode!=null and empcode!=''">
         empcode=#{empcode,jdbcType=VARCHAR}
        </if>
                                      
        <if test="visittime!=null and visittime!=''">
        ,
         visittime=#{visittime,jdbcType=VARCHAR}
        </if>
                                      
        <if test="idcardnum!=null and idcardnum!=''">
        ,
         idcardnum=#{idcardnum,jdbcType=VARCHAR}
        </if>
                                      
        <if test="content!=null and content!=''">
        ,
         content=#{content,jdbcType=VARCHAR}
        </if>
                                      
        <if test="name!=null and name!=''">
        ,
         name=#{name,jdbcType=VARCHAR}
        </if>
                                      
        <if test="type!=null and type!=''">
        ,
         type=#{type,jdbcType=VARCHAR}
        </if>
                                      
        <if test="xijie!=null and xijie!=''">
        ,
         xijie=#{xijie,jdbcType=VARCHAR}
        </if>
                      WHERE id = #{id,jdbcType=INTEGER}
    </update>

    <select id="get" resultMap="queryResultMap" parameterType="com.chinal.emp.entity.SitRecord">
		SELECT 
                         id
                , empcode
                , visittime
                , idcardnum
                , content
                , name
                , type
                , xijie
        		FROM visit_record t
		WHERE id = #{id,jdbcType=INTEGER}
	</select>
	
	<delete id="del" parameterType="com.chinal.emp.entity.SitRecord">
		DELETE FROM visit_record
		WHERE id = #{id,jdbcType=INTEGER}
	</delete>

</mapper>
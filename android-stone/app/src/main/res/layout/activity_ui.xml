<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.solaris.androidstone.view.UIActivity">

    <com.solaris.androidstone.layout.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout" />

    <Button
        android:text="基本组件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:id="@+id/btnBasicUI" />

    <Button
        android:text="竖式布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBasicUI"
        android:layout_toEndOf="@+id/btnBasicUI"
        android:layout_marginStart="44dp"
        android:id="@+id/btnLayout" />
    <Button
        android:text="横式布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLayout"
        android:layout_below="@+id/btnLayout"
        android:id="@+id/btnLayout1" />
    <Button
        android:text="瀑布布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout2"
        android:layout_below="@+id/btnLayout1"
        android:layout_alignLeft="@+id/btnLayout1" />
    <Button
        android:text="聊天布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout3"
        android:layout_below="@+id/btnLayout2"
        android:layout_alignLeft="@+id/btnLayout2" />


</RelativeLayout>

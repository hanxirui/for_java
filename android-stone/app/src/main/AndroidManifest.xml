<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solaris.android_third_party">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ThirdPartyShowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity android:name=".view.TeacherActivity" />
        <activity android:name=".view.StudentActivity" />
        <activity android:name=".view.RetrofitActivity" />
        <activity android:name=".view.RealmActivity" />
        <activity android:name=".view.GlideActivity" />
        <activity
            android:name=".view.FirstcodeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".view.HiddenIntentActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.solaris.android_third_party.ACTION_START" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.solaris.android_third_party.MY_CATEGORY" />
            </intent-filter>
        </activity>
        <activity android:name=".view.UIActivity" />
        <activity android:name=".view.BasicUIActivity" />
        <activity android:name=".view.RecyclerViewActivity" />
        <activity android:name=".view.RecyclerView2Activity" />
        <activity android:name=".view.RecyclerView3Activity" />
        <activity android:name=".view.TalkActivity" />
        <activity android:name=".view.NewsContentActivity" />
        <activity android:name=".view.NewsActivity" />
        <activity android:name=".view.BroadcastActivity" />

        <receiver
            android:name=".utils.BootCompleteReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".utils.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.broadcasttest.MY_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.StorageActivity" />
        <activity android:name=".view.SQLiteActivity" />
        <activity android:name=".view.ContentResolverActivity" />

        <provider
            android:name=".provider.MyContentProvider"
            android:authorities="com.solaris.app.provider"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".view.NotificationActivity" />
        <activity android:name=".view.NotiResultActivity"></activity>
    </application>

</manifest>